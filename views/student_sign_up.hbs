    <script>
      

        function checkForm()
        {
            var firstName = document.getElementById("firstName").value;
            var lastName = document.getElementById("lastName").value;
            var email = document.getElementById("email").value;
            var password1 = document.getElementById("password1").value; 
            var password2 = document.getElementById("password2").value; 
    
            var valid = false;  
            var all_fields = true;
            
            if (firstName != "")
                document.getElementById("firstName").style.backgroundColor = "white";
            else
            {
                all_fields = false;
                document.getElementById("firstName").style.backgroundColor = "red";
            }

            if (lastName != "")
                document.getElementById("lastName").style.backgroundColor = "white";
            else
            {
                all_fields = false;
                document.getElementById("lastName").style.backgroundColor = "red";
            }
            
            if (email != "")
                document.getElementById("email").style.backgroundColor = "white";
            else
            {
                all_fields = false;
                document.getElementById("email").style.backgroundColor = "red";
            }

            if (password1 != "")
                document.getElementById("password1").style.backgroundColor = "white";
            else
            {
                all_fields = false;
                document.getElementById("password1").style.backgroundColor = "red";
            }

            if (password2 != "")
                document.getElementById("password2").style.backgroundColor = "white";
            else
            {
                all_fields = false;
                document.getElementById("password2").style.backgroundColor = "red";
            }
            
            if (all_fields == true)
            {
                if(password1 == password2 && password1.length >= 8 && email.includes("@dlsu.edu.ph")){
                    alert("Welcome, "+firstName+" "+lastName+"!" +" Your account has been created.");
                    valid = true;
                }
                else if(password1.length < 8){
                    alert("Kindly enter a longer password.");
                }
                else if (!email.includes("@dlsu.edu.ph")) {
                    alert("Kindly use your registered DLSU email.");
                }
                else {
                    document.getElementById("password1").style.backgroundColor = "red";
                    document.getElementById("password2").style.backgroundColor = "red";
                    alert("Passwords entered do not match! Please try again.");
                }
            }
            
            return valid;
                
        } 
        </script>

