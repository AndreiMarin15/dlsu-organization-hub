<script>
        function validateLogIn() {
            var studentmail = document.forms["dForm"]["email"].value;
            var pass = document.forms["dForm"]["password"].value;
            
            console.log(studentmail);

            return $.get('/validateLog',{email: studentmail, password: pass},function(result) {
                console.log(result);

                if(!result){
                    alert("Invalid Login Credentials");
                    
                }
                return result;

            });

        }
