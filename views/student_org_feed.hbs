<!DOCTYPE html>
<html lang="en">
    <head>
        <script src="https://kit.fontawesome.com/dfcf57d1e4.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="../css/styleForOrgFeed.css" />
        <title>Organization Feed</title>
    </head>
    <body>
        <div class="container1">
            <div class="box1">
                <div class="left">
                     <div class="b1row1">
                         <img class="responsive" src="../images/logo_feed.png" alt="" />
                     </div>
                    
                     <div class="b1row2">
                        {{#if user.image}}
                            <img class="responsive" src="../images/{{user.image}}" alt="" />

                        {{else}}
                            <img class="responsive" src="../images/org_user.png" alt="" />

                        {{/if}}
                     </div>
                </div>
                <div class="right"><div class="b1row3">
                    <div class="name">
                        <h1>{{user.name}}</h1>
                    </div>
               
                    <div class="navigation">

                        
                        <form action="/student-view-org-profile/follow/{{user._id}}" method="post">
                        <button class="follow" type="submit"><i class="fa-solid fa-person-circle-plus"></i> &nbsp; FOLLOW</button>
                        </form>
                        <br>
                        <a class="button" href="/student-view-org-profile/{{user._id}}"><i class="fa-solid fa-user"></i>&nbsp; &nbsp; ABOUT</a><br>
                    </div>
                    <br>
                    <a class="button" href="/student-feed"><i class="fa-solid fa-arrow-left"></i></i>&nbsp; &nbsp;RETURN TO FEED</a><br>
                </div>
            </div>
                
            </div>

            <div class="box2">
                <div class="b2row1">
                    <input type="text" name="searchbar" id="searchbar" placeholder="   Search posts, events, and pages..." />
                    <button type="submit" id="search"><i class="fa-solid fa-magnifying-glass"></i> &nbsp; GO!</button>
                </div>
                <div class="feed_type">
                    <nav>
                        <ul class="navLinks">
                            {{#if post}}
                                {{#unless event}}
                                    
                                        <li><a class="current" href="/student-view-org/" id="nav_link"><b>POSTS</b></a> </li>
                                        <li><a class="notCurrent" href="/student-view-org/" id="nav_link" ><b>EVENTS</b></a></li>
                                   
                                {{/unless}}
                            {{/if}}

                            {{#if event}}
                                {{#unless post}}
                                    
                                        <li><a class="notCurrent" href="/student-view-org/" id="nav_link"><b>POSTS</b></a> </li>
                                        <li><a class="current" href="/student-view-org/" id="nav_link" ><b>EVENTS</b></a></li>
                                 
                                {{/unless}}
                            {{/if}}

                        </ul>
                    </nav>
                </div>
                <div class="b2row2">
                    {{#if post}}
                    {{#each post}}
                    {{> posts}}
                    {{/each}}
                    {{/if}}       

                    {{#if event}}
                    {{#each event}}
                    {{> events}}
                    {{/each}}
                    {{/if}}

                </div>
            </div>

            <div class="box3">
                <div class="name">
                    <h1>ACCOUNT</h1>
                </div>
                <div class="b3row1">
                    <a class="button" id="current" href="/student-edit-profile"><i class="fa-solid fa-user-pen"></i>&nbsp; &nbsp; EDIT PROFILE</a><br>
                    <a class="button" id="current" href="/student-settings"><i class="fa-solid fa-gear"></i>&nbsp; &nbsp; ACCT. SETTINGS</a><br>
                    <a class="button" id="current" href="/logout"><i class="fa-solid fa-arrow-right-from-bracket"></i>&nbsp; &nbsp; LOG-OUT</a><br>
                </div>
                <div class="calendar_name">
                    <h1>YOUR CALENDAR</h1>
                </div>
                <div class="b3row2">
                    <iframe class="calendar" src="https://calendar.google.com/calendar/embed?src=c_5sjo26tm84vmof5ac5fq1dvu4k%40group.calendar.google.com&ctz=Asia%2FManila" style="border: 0" width="800" height="600" frameborder="0" scrolling="no"></iframe>
                </div>
            </div>
        </div>
    
        <div class="container5" id="bottom">

            <div class="box5">
                <img src="../images/logo_footer.png"> &nbsp;
            </div>
            
            <div class="box6">
                <p><i class="fa-solid fa-envelope-open"></i> &nbsp;
                    CONTACT US <br>
                    <a class="mail" href="mailto:misael_marin@dlsu.edu.ph">misael_marin@dlsu.edu.ph</a><br>
                    <a class="mail" href="mailto:criscela_racelis@dlsu.edu.ph">criscela_racelis@dlsu.edu.ph</a><br>
                    <a class="mail" href="mailto:jaira_millicent_santos@dlsu.edu.ph">jaira_millicent_santos@dlsu.edu.ph</a>
                </p>
            </div>
            <br>
            <div class="box7">
                <p class="title"><i class="fa-solid fa-location-pin"></i> &nbsp;
                    WHERE TO FIND US <br>
                </p>
                
                <p class="content">
                    Gokongwei Bldg., De La Salle University 2401 Taft Avenue, 1004 Manila, Philippines
                </p>
            </div>
    
        </div>

    
    </body>
</html>
