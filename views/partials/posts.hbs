
<div class="card">

    <div class="card-header">
        <div class="logo">
            <img src="../images/lscs.png">
        </div>
        <div class="header-title">
            <a href="../Pages/lscs.html" id="nav_link"><b>{{accountName}}</b></a><br>
            <p class="details"> <strong> Posted on: </strong> {{createdAt}}</p>
            <p class="details" ><strong> Type: </strong> Post</p>

        </div>
    </div>

    <div class="container">
        <div class="attachment">
            {{#if image}}
                <img src="./images/{{image}}" width="300">
            {{/if}}
        </div>
        <div class="caption">
            <p>{{content}}</p>
        </div>
    </div>


     <div class="actions">
        <div class="action-btn">
            <button onclick="/like/{{accountName}}/{{createdAt}}" method="post"><i class="fa-solid fa-thumbs-up"></i></i> &nbsp;{{numberlikes}} LIKES</button>
            



            
        </div>
        <div class="action-btn">
            <button action="/save" type="submit"><i class="fa-solid fa-bookmark"></i> &nbsp;SAVE</button>
        </div>
        <div class="action-btn">
            <button action="/going" type="submit"><i class="fa-solid fa-person-running"></i> &nbsp;MARK AS GOING</button>
        </div>
    </div>
</div>
